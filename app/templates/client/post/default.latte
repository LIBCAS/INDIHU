{layout '../@layout.latte'}

{block content}
<div class="post">
    <div class="page__container">
        <div class="page__header">
            <h1 class="page__header-title">{$post->name}</h1>
        </div>
    </div>
    <div class="page__container">
        <div class="page__content">
            {$post->content|wpContent|noescape}
        </div>
    </div>
</div>    
{/block}